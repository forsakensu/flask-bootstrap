{% extends "base.j2" %}

{% block content %}
  <h1>Контакты</h1>
  <p>Контактная информация.</p>

  <form action="{{ url_for('feedback') }}" method="post">
    {{ form.hidden_tag() }}
    <div class="mb-3">
      {{ form.name(class="form-control" id="name") }}
      {{ form.name.label(class="form-label") }}
    </div>

    <div class="mb-3">
      {{ form.email(class="form-control" id="email") }}
      {{ form.email.label(class="form-label") }}
    </div>

    <div class="mb-3">
      {{ form.message_content(class="form-control" id="message" rows="4") }}
      {{ form.message_content.label(class="form-label") }}
    </div>

    <div class="mb-3 form-check">
      {{ form.newsletter(class="form-check-input" id="newsletter") }}
      {{ form.newsletter.label(class="form-check-label") }}
    </div>

    {{ form.submit(class="btn btn-primary") }}
  </form>

  {# TODO: перенести в отдельный файл #}
  <script src="{{ url_for('static', filename='js/contact.js') }}"></script>
{% endblock content %}
