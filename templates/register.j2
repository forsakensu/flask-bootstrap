{% extends "base.j2" %}

{% block content %}
<form method="POST">
  <div class="mb-3">
      {{ form.username.label(class="form-label", for="username") }}
      {{ form.username(class="form-control", placeholder="Введите имя пользователя") }}
  </div>
  <div class="mb-3">
      {{ form.password.label(class="form-label", for="password") }}
      {{ form.password(class="form-control", placeholder="Введите пароль") }}
      {% for error in form.password.errors %}
          <div class="text-danger">{{ error }}</div>
      {% endfor %}
  </div>
  <div class="mb-3">
      {{ form.first_name.label(class="form-label", for="first-name") }}
      {{ form.first_name(class="form-control", placeholder="Введите имя") }}
      {% for error in form.first_name.errors %}
          <div class="text-danger">{{ error }}</div>
      {% endfor %}
  </div>
  <div class="mb-3">
      {{ form.last_name.label(class="form-label", for="last-name") }}
      {{ form.last_name(class="form-control", placeholder="Введите фамилию") }}
      {% for error in form.last_name.errors %}
          <div class="text-danger">{{ error }}</div>
      {% endfor %}
  </div>
  <div class="mb-3">
      <label for="email" class="form-label">Электронная почта</label>
      {{ form.email.label(class="form-label", for="email") }}
      {{ form.email(class="form-control", placeholder="Введите email") }}
      {% for error in form.email.errors %}
          <div class="text-danger">{{ error }}</div>
      {% endfor %}
  </div>
  <div class="mb-3">
      {{ form.phone.label(class="form-label", for="phone") }}
      {{ form.phone(class="form-control", placeholder="Введите номер телефона") }}
      {% for error in form.phone.errors %}
          <div class="text-danger">{{ error }}</div>
      {% endfor %}

      {% if error %}
        <script type="text/javascript">
          alert("{{ error }}");
        </script>
      {% endif %}
  </div>
  <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
</form>
{% endblock content %}
